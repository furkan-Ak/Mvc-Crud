@using MVCSTOK.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "UrunList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<table id="tblUrun" class="table table-bordered">
    <thead>
        <tr>
            <th>URUN ID</th>
            <th>URUN AD</th>
            <th>URUN MARKA</th>
            <th>URUN KATEGORİ</th>
            <th>URUN FİYAT</th>
            <th>URUN STOK</th>
            <th>SİL</th>
            <th>GUNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.URUNID</th>
                <td>@urn.URUNAD</td>
                <td>@urn.MARKA</td>
                <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
                <td>@urn.FIYAT</td>
                <td>@urn.STOK</td>
                <td><a href="/Urun/Sil/@urn.URUNID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@urn.URUNID" class="btn btn-success">Guncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Urun Ekle</a>
<script>
    $("#tblUrun").DataTable();
</script>